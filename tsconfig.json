{
    "compilerOptions": {
        "target": "es5"
        ,"module": "amd"
        ,"moduleResolution": "classic"
        ,"outDir": "./dist"
        ,"experimentalDecorators": true
        ,"noImplicitAny":true		
        ,"sourceMap": false        
		,"declaration": false
		,"removeComments":true
		,"noEmitHelpers":true 
		,"suppressImplicitAnyIndexErrors": true
        ,"importHelpers":true
        ,"baseUrl": "./"
        ,"paths": {
            "tslib" : ["jspm_packages/npm/tslib@1.5.0/tslib.d.ts"]
            ,"event-emitter-lite":["node_modules/event-emitter-lite/dist/amd/event-emitter.d.ts"]
            ,"page":["src/router/page.d.ts"]
        }
    },
    "exclude": [
        "node_modules"
		,"dist"
    ],
    "compileOnSave": false
}
