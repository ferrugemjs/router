{
    "compilerOptions": {
        "target": "es5"
        ,"module": "amd"
        ,"moduleResolution": "classic"
        ,"outDir": "./dist"
        ,"experimentalDecorators": true
        ,"noImplicitAny":true		
        ,"sourceMap": false        
		,"declaration": false
		,"removeComments":true
		,"noEmitHelpers":true 
		,"suppressImplicitAnyIndexErrors": true
    },
    "include": [
        "jspm_packages/npm/event-emitter-lite@*/*.d.ts"
    ],
    "exclude": [
        "node_modules"
		,"dist"
    ],
    "compileOnSave": false
}
