{
    "compilerOptions": {
        "target": "es5",
        "lib": [
            "dom",
            "es6",
            "es2015"
        ],
        "module": "amd",
        "moduleResolution": "node",
        "outDir": "./test/apps",
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "noEmitHelpers": true,
        "suppressImplicitAnyIndexErrors": true,
        "importHelpers": true,
        "baseUrl": "./",
        "paths": {
            "event-emitter-lite": [
                "node_modules/event-emitter-lite/dist/amd/event-emitter.d.ts"
            ],
            "@ferrugemjs/router": [
                "node_modules/@ferrugemjs/router/index.d.ts"
            ],
            "@ferrugemjs/library": [
                "node_modules/@ferrugemjs/library/dist/index.d.ts"
            ],
        }
    },
    "exclude": [
        "node_modules",
        "dist",
        "build-test",
        "src",
    ],
    "compileOnSave": false
}